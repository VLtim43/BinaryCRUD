<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="300"
        x:Class="BinaryCRUD.Views.LoginDialog"
        Title="Login - BinaryCRUD"
        Width="400" Height="300"
        WindowStartupLocation="CenterScreen"
        CanResize="False">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="BinaryCRUD Login" 
                   FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>

        <!-- Username -->
        <TextBlock Grid.Row="1" Text="Username:" 
                   FontWeight="Medium" 
                   Margin="0,0,0,5"/>
        <TextBox Grid.Row="2" Name="UsernameTextBox" 
                 Watermark="Enter username..." 
                 Height="35" 
                 Margin="0,0,0,15"/>

        <!-- Password -->
        <TextBlock Grid.Row="3" Text="Password:" 
                   FontWeight="Medium" 
                   Margin="0,0,0,5"/>
        <TextBox Grid.Row="4" Name="PasswordTextBox" 
                 Watermark="Enter password..." 
                 Height="35" 
                 PasswordChar="*"
                 Margin="0,0,0,15"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Spacing="10" 
                    Margin="0,10,0,0">
            <Button Name="LoginButton" Content="Login" 
                    Width="100" Height="35" 
                    Background="#007ACC" Foreground="White"
                    IsDefault="True"/>
            <Button Name="CancelButton" Content="Cancel" 
                    Width="100" Height="35"
                    IsCancel="True"/>
        </StackPanel>

        <!-- Default Users Info -->
        <Border Grid.Row="6" Background="#F0F0F0" 
                CornerRadius="5" Padding="10" 
                Margin="0,20,0,0">
            <StackPanel>
                <TextBlock Text="Default Users:" FontWeight="Bold" FontSize="12"/>
                <TextBlock Text="• admin / admin123 (Admin)" FontSize="11" Margin="0,2,0,0"/>
                <TextBlock Text="• user / user123 (User)" FontSize="11" Margin="0,2,0,0"/>
            </StackPanel>
        </Border>
    </Grid>

</Window>