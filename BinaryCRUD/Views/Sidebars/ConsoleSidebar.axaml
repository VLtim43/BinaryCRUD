<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:BinaryCRUD.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="350" d:DesignHeight="450"
             x:Class="BinaryCRUD.Views.Sidebars.ConsoleSidebar"
             x:DataType="vm:MainWindowViewModel">

    <Border Background="#1E1E1E" 
            Width="350"
            BorderBrush="#333333" 
            BorderThickness="0,0,1,0">
        <Grid RowDefinitions="Auto,*,Auto">
            <!-- Console Header -->
            <Border Grid.Row="0" Background="#2D2D30" Padding="10,8">
                <Grid ColumnDefinitions="*,Auto">
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="Debug Console" 
                                  FontWeight="Bold" 
                                  Foreground="#CCCCCC" 
                                  VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding ConsoleService.Entries.Count, StringFormat='({0})'}" 
                                  Foreground="#888888" 
                                  FontSize="11"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                    <Button Grid.Column="1" 
                           Content="âœ•" 
                           Width="24" 
                           Height="24"
                           Background="Transparent"
                           Foreground="#CCCCCC"
                           BorderThickness="0"
                           Command="{Binding ToggleConsoleCommand}"
                           ToolTip.Tip="Close Console"/>
                </Grid>
            </Border>
            
            <!-- Console Content -->
            <ScrollViewer Grid.Row="1" 
                         Name="ConsoleScrollViewer" 
                         VerticalScrollBarVisibility="Auto"
                         Padding="10,5">
                <ItemsControl ItemsSource="{Binding ConsoleService.Entries}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="0,1">
                                <Grid ColumnDefinitions="80,*">
                                    <TextBlock Grid.Column="0" 
                                              Text="{Binding TimestampString}" 
                                              FontFamily="Consolas,Courier New,monospace"
                                              FontSize="10"
                                              Foreground="#888888"
                                              VerticalAlignment="Top"/>
                                    <TextBlock Grid.Column="1" 
                                              Text="{Binding Message}" 
                                              FontFamily="Consolas,Courier New,monospace"
                                              FontSize="10"
                                              Foreground="{Binding LevelColor}"
                                              TextWrapping="Wrap"
                                              VerticalAlignment="Top"
                                              Margin="8,0,0,0"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
            
            <!-- Console Footer -->
            <Border Grid.Row="2" Background="#252526" Padding="10,6">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Button Content="Clear" 
                           Command="{Binding ClearConsoleCommand}" 
                           Background="#007ACC" 
                           Foreground="White"
                           Padding="8,4"
                           FontSize="11"/>
                    <TextBlock Text="Real-time debug output" 
                              VerticalAlignment="Center"
                              Foreground="#666666"
                              FontSize="10"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>

</UserControl>