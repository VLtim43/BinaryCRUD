<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:BinaryCRUD.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="BinaryCRUD.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="BinaryCRUD">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid>
        <TabControl>
            <!-- Items Tab -->
            <TabItem Header="Items">
                <Grid ColumnDefinitions="*,Auto,200">
                    <!-- Main content area -->
                    <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical" Spacing="10">
                        <TextBox Text="{Binding Text}" 
                                 Watermark="Enter item name..." 
                                 Width="300" Height="30"/>
                        <TextBox Text="{Binding PriceInput}" 
                                 Watermark="Enter price..." 
                                 Width="300" Height="30"/>
                        <Button Content="Save Item" Command="{Binding SaveCommand}" Width="300" Height="35"/>
                        <Button Content="Populate Inventory" Command="{Binding PopulateInventoryCommand}" Width="300" Height="35" Background="Orange" Foreground="White"/>
                        <Button Content="Read Items" Command="{Binding ReadItemsCommand}" Width="300" Height="35"/>
                        <Button Content="Read Header" Command="{Binding ReadHeaderCommand}" Width="300" Height="35"/>
                        <Button Content="Quit" Command="{Binding QuitCommand}" Width="300" Height="35"/>
                    </StackPanel>
                    
                    <!-- Vertical separator -->
                    <Border Grid.Column="1" Width="1" Background="LightGray" Margin="10,20"/>
                    
                    <!-- Items sidebar -->
                    <ScrollViewer Grid.Column="2" Background="#F5F5F5" Padding="10">
                        <StackPanel>
                            <TextBlock Text="Items List" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                            <Button Content="Refresh" Command="{Binding RefreshItemsCommand}" Width="180" Height="30" Margin="0,0,0,5"/>
                            <Button Content="Delete File" Command="{Binding DeleteFileCommand}" Width="180" Height="30" Margin="0,0,0,10" Background="Red" Foreground="White" IsEnabled="{Binding HasItems}"/>
                            <ItemsControl ItemsSource="{Binding Items}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Vertical"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="White" 
                                                BorderBrush="LightGray" 
                                                BorderThickness="1" 
                                                CornerRadius="3" 
                                                Padding="8" 
                                                Margin="0,2"
                                                Focusable="False">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <StackPanel Grid.Column="0" Focusable="False">
                                                    <TextBlock Text="{Binding Content}" FontWeight="Medium" TextWrapping="Wrap"/>
                                                    <TextBlock Text="{Binding Price, StringFormat='${0:F2}'}" FontSize="12" Foreground="Green"/>
                                                    <TextBlock Text="{Binding Id, StringFormat='ID: {0}'}" FontSize="10" Foreground="Gray"/>
                                                    <TextBlock Text="DELETED" FontSize="10" Foreground="Red" FontWeight="Bold" 
                                                              IsVisible="{Binding IsTombstone}"/>
                                                </StackPanel>
                                                
                                                <Button Grid.Column="1" 
                                                        Content="×" 
                                                        Width="25" 
                                                        Height="25" 
                                                        Background="Red" 
                                                        Foreground="White" 
                                                        FontWeight="Bold"
                                                        Command="{Binding $parent[Window].DataContext.DeleteItemCommand}"
                                                        CommandParameter="{Binding Id}"
                                                        IsVisible="{Binding !IsTombstone}"
                                                        VerticalAlignment="Top"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            
            <!-- Orders Tab -->
            <TabItem Header="Orders">
                <Grid ColumnDefinitions="*,Auto,200">
                    <!-- Order creation area -->
                    <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical" Spacing="10">
                        <TextBlock Text="Create Order" FontWeight="Bold" FontSize="18" Margin="0,0,0,10"/>
                        <ComboBox ItemsSource="{Binding ActiveItems}" 
                                  SelectedItem="{Binding SelectedItem}"
                                  Width="300" Height="35" 
                                  PlaceholderText="Select an item...">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Content}" Margin="0,0,10,0"/>
                                        <TextBlock Text="{Binding Price, StringFormat='${0:F2}'}" Foreground="Green"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <Button Content="Create Order" Command="{Binding CreateOrderCommand}" Width="300" Height="35" Background="Green" Foreground="White"/>
                        <Button Content="Read Orders" Command="{Binding ReadOrdersCommand}" Width="300" Height="35"/>
                        <Button Content="Quit" Command="{Binding QuitCommand}" Width="300" Height="35"/>
                    </StackPanel>
                    
                    <!-- Vertical separator -->
                    <Border Grid.Column="1" Width="1" Background="LightGray" Margin="10,20"/>
                    
                    <!-- Orders sidebar -->
                    <ScrollViewer Grid.Column="2" Background="#F5F5F5" Padding="10">
                        <StackPanel>
                            <TextBlock Text="Orders List" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                            <Button Content="Refresh" Command="{Binding RefreshOrdersCommand}" Width="180" Height="30" Margin="0,0,0,5"/>
                            <Button Content="Delete All Orders" Command="{Binding DeleteAllOrdersCommand}" Width="180" Height="30" Margin="0,0,0,10" Background="Red" Foreground="White" IsEnabled="{Binding HasOrders}"/>
                            <ItemsControl ItemsSource="{Binding Orders}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Vertical"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="White" 
                                                BorderBrush="LightGray" 
                                                BorderThickness="1" 
                                                CornerRadius="3" 
                                                Padding="8" 
                                                Margin="0,2"
                                                Focusable="False">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <StackPanel Grid.Column="0" Focusable="False">
                                                    <TextBlock Text="{Binding Id, StringFormat='Order #{0}'}" FontWeight="Medium"/>
                                                    <TextBlock Text="{Binding ItemId, StringFormat='Item ID: {0}'}" FontSize="12" Foreground="Blue"/>
                                                    <TextBlock Text="{Binding TotalPrice, StringFormat='Total: ${0:F2}'}" FontSize="12" Foreground="Green"/>
                                                    <TextBlock Text="DELETED" FontSize="10" Foreground="Red" FontWeight="Bold" 
                                                              IsVisible="{Binding IsTombstone}"/>
                                                </StackPanel>
                                                
                                                <Button Grid.Column="1" 
                                                        Content="×" 
                                                        Width="25" 
                                                        Height="25" 
                                                        Background="Red" 
                                                        Foreground="White" 
                                                        FontWeight="Bold"
                                                        Command="{Binding $parent[Window].DataContext.DeleteOrderCommand}"
                                                        CommandParameter="{Binding Id}"
                                                        IsVisible="{Binding !IsTombstone}"
                                                        VerticalAlignment="Top"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>
        </TabControl>
        
        <!-- Toast notifications container -->
        <ItemsControl ItemsSource="{Binding ToastService.Toasts}" 
                      VerticalAlignment="Top" 
                      HorizontalAlignment="Right"
                      Margin="20">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Vertical" Spacing="5"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Background="{Binding BackgroundColor}" 
                            CornerRadius="5" 
                            Padding="15,8" 
                            Margin="0,2"
                            IsVisible="{Binding IsVisible}">
                        <TextBlock Text="{Binding Message}" 
                                   Foreground="White" 
                                   FontWeight="Medium"/>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>

</Window>
