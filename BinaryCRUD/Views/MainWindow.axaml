<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:BinaryCRUD.ViewModels"
        xmlns:tabs="using:BinaryCRUD.Views.Tabs"
        xmlns:sidebars="using:BinaryCRUD.Views.Sidebars"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="BinaryCRUD.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="BinaryCRUD">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Console Sidebar -->
        <sidebars:ConsoleSidebar Grid.Column="0" 
                                 IsVisible="{Binding IsConsoleVisible}"
                                 DataContext="{Binding}" />
        
        <TabControl Grid.Column="1">
            <!-- Items Tab -->
            <TabItem Header="Items">
                <tabs:ItemsTab DataContext="{Binding}" />
            </TabItem>
            
            <!-- Orders Tab -->
            <TabItem Header="Orders">
                <tabs:OrdersTab DataContext="{Binding}" />
            </TabItem>
        </TabControl>
        
        <!-- Console Edge Toggle -->
        <Border Grid.Column="0" 
                Grid.ColumnSpan="2"
                Background="#007ACC"
                Width="20"
                Height="60"
                CornerRadius="0,10,10,0"
                VerticalAlignment="Center"
                HorizontalAlignment="Left"
                Margin="0"
                IsVisible="{Binding !IsConsoleVisible}"
                Cursor="Hand">
            <Button Background="Transparent"
                    BorderThickness="0"
                    Width="20"
                    Height="60"
                    Command="{Binding ToggleConsoleCommand}"
                    ToolTip.Tip="Show Debug Console"
                    Cursor="Hand">
                <TextBlock Text="âš¡" 
                          FontSize="12"
                          Foreground="White"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center">
                    <TextBlock.RenderTransform>
                        <RotateTransform Angle="90"/>
                    </TextBlock.RenderTransform>
                </TextBlock>
            </Button>
        </Border>

        <!-- Toast notifications container -->
        <ItemsControl ItemsSource="{Binding ToastService.Toasts}" 
                      VerticalAlignment="Top" 
                      HorizontalAlignment="Right"
                      Margin="20"
                      Grid.Column="1">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Vertical" Spacing="5"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Background="{Binding BackgroundColor}" 
                            CornerRadius="5" 
                            Padding="15,8" 
                            Margin="0,2"
                            IsVisible="{Binding IsVisible}">
                        <TextBlock Text="{Binding Message}" 
                                   Foreground="White" 
                                   FontWeight="Medium"/>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>

</Window>