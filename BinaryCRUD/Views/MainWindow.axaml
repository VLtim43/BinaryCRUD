<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:BinaryCRUD.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="BinaryCRUD.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="BinaryCRUD">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Console Sidebar -->
        <Border Grid.Column="0" 
                Background="#1E1E1E" 
                Width="350"
                IsVisible="{Binding IsConsoleVisible}"
                BorderBrush="#333333" 
                BorderThickness="0,0,1,0">
            <Grid RowDefinitions="Auto,*,Auto">
                <!-- Console Header -->
                <Border Grid.Row="0" Background="#2D2D30" Padding="10,8">
                    <Grid ColumnDefinitions="*,Auto">
                        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="Debug Console" 
                                      FontWeight="Bold" 
                                      Foreground="#CCCCCC" 
                                      VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding ConsoleService.Entries.Count, StringFormat='({0})'}" 
                                      Foreground="#888888" 
                                      FontSize="11"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                        <Button Grid.Column="1" 
                               Content="✕" 
                               Width="24" 
                               Height="24"
                               Background="Transparent"
                               Foreground="#CCCCCC"
                               BorderThickness="0"
                               Command="{Binding ToggleConsoleCommand}"
                               ToolTip.Tip="Close Console"/>
                    </Grid>
                </Border>
                
                <!-- Console Content -->
                <ScrollViewer Grid.Row="1" 
                             Name="ConsoleScrollViewer" 
                             VerticalScrollBarVisibility="Auto"
                             Padding="10,5">
                    <ItemsControl ItemsSource="{Binding ConsoleService.Entries}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Vertical"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="0,1">
                                    <Grid ColumnDefinitions="80,*">
                                        <TextBlock Grid.Column="0" 
                                                  Text="{Binding TimestampString}" 
                                                  FontFamily="Consolas,Courier New,monospace"
                                                  FontSize="10"
                                                  Foreground="#888888"
                                                  VerticalAlignment="Top"/>
                                        <TextBlock Grid.Column="1" 
                                                  Text="{Binding Message}" 
                                                  FontFamily="Consolas,Courier New,monospace"
                                                  FontSize="10"
                                                  Foreground="{Binding LevelColor}"
                                                  TextWrapping="Wrap"
                                                  VerticalAlignment="Top"
                                                  Margin="8,0,0,0"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
                
                <!-- Console Footer -->
                <Border Grid.Row="2" Background="#252526" Padding="10,6">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button Content="Clear" 
                               Command="{Binding ClearConsoleCommand}" 
                               Background="#007ACC" 
                               Foreground="White"
                               Padding="8,4"
                               FontSize="11"/>
                        <TextBlock Text="Real-time debug output" 
                                  VerticalAlignment="Center"
                                  Foreground="#666666"
                                  FontSize="10"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
        
        <TabControl Grid.Column="1">
            <!-- Items Tab -->
            <TabItem Header="Items">
                <Grid ColumnDefinitions="*,Auto,200">
                    <!-- Main content area -->
                    <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical" Spacing="10">
                        <TextBox Text="{Binding Text}" 
                                 Watermark="Enter item name..." 
                                 Width="300" Height="30"/>
                        <TextBox Text="{Binding PriceInput}" 
                                 Watermark="Enter price..." 
                                 Width="300" Height="30"/>
                        <Button Content="Save Item" Command="{Binding SaveCommand}" Width="300" Height="35"/>
                        <Button Content="Populate Inventory" Command="{Binding PopulateInventoryCommand}" Width="300" Height="35" Background="Orange" Foreground="White"/>
                        <Button Content="Read Items" Command="{Binding ReadItemsCommand}" Width="300" Height="35"/>
                        <Button Content="Read Header" Command="{Binding ReadHeaderCommand}" Width="300" Height="35"/>
                        <Button Content="Quit" Command="{Binding QuitCommand}" Width="300" Height="35"/>
                    </StackPanel>
                    
                    <!-- Vertical separator -->
                    <Border Grid.Column="1" Width="1" Background="LightGray" Margin="10,20"/>
                    
                    <!-- Items sidebar -->
                    <ScrollViewer Grid.Column="2" Background="#F5F5F5" Padding="10">
                        <StackPanel>
                            <TextBlock Text="Items List" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                            <Button Content="Delete File" Command="{Binding DeleteFileCommand}" Width="180" Height="30" Margin="0,0,0,10" Background="Red" Foreground="White" IsEnabled="{Binding HasItems}"/>
                            <ItemsControl ItemsSource="{Binding Items}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Vertical"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="White" 
                                                BorderBrush="LightGray" 
                                                BorderThickness="1" 
                                                CornerRadius="3" 
                                                Padding="8" 
                                                Margin="0,2"
                                                Focusable="False">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <StackPanel Grid.Column="0" Focusable="False">
                                                    <TextBlock Text="{Binding Content}" FontWeight="Medium" TextWrapping="Wrap"/>
                                                    <TextBlock Text="{Binding Price, StringFormat='${0:F2}'}" FontSize="12" Foreground="Green"/>
                                                    <TextBlock Text="{Binding Id, StringFormat='ID: {0}'}" FontSize="10" Foreground="Gray"/>
                                                    <TextBlock Text="DELETED" FontSize="10" Foreground="Red" FontWeight="Bold" 
                                                              IsVisible="{Binding IsTombstone}"/>
                                                </StackPanel>
                                                
                                                <Button Grid.Column="1" 
                                                        Content="×" 
                                                        Width="25" 
                                                        Height="25" 
                                                        Background="Red" 
                                                        Foreground="White" 
                                                        FontWeight="Bold"
                                                        Command="{Binding $parent[Window].DataContext.DeleteItemCommand}"
                                                        CommandParameter="{Binding Id}"
                                                        IsVisible="{Binding !IsTombstone}"
                                                        VerticalAlignment="Top"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            
            <!-- Orders Tab -->
            <TabItem Header="Orders">
                <Grid ColumnDefinitions="*,Auto,200,Auto,250">
                    <!-- Order creation area -->
                    <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Top" Orientation="Vertical" Spacing="10" Margin="20">
                        <TextBlock Text="Select Items" FontWeight="Bold" FontSize="18" Margin="0,0,0,10"/>
                        <ComboBox ItemsSource="{Binding ActiveItems}" 
                                  SelectedItem="{Binding SelectedItem}"
                                  Width="300" Height="35" 
                                  PlaceholderText="Select an item to add to cart...">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Content}" Margin="0,0,10,0"/>
                                        <TextBlock Text="{Binding Price, StringFormat='${0:F2}'}" Foreground="Green"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <Button Content="Add to Cart" Command="{Binding AddToCartCommand}" Width="300" Height="35" Background="Blue" Foreground="White"/>
                        <Separator Height="20"/>
                        <Button Content="Read Orders" Command="{Binding ReadOrdersCommand}" Width="300" Height="35"/>
                        <Button Content="Quit" Command="{Binding QuitCommand}" Width="300" Height="35"/>
                    </StackPanel>
                    
                    <!-- Vertical separator -->
                    <Border Grid.Column="1" Width="1" Background="LightGray" Margin="10,20"/>
                    
                    <!-- Shopping Cart -->
                    <ScrollViewer Grid.Column="2" Background="#E8F4FD" Padding="10">
                        <StackPanel>
                            <TextBlock Text="Shopping Cart" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                            <TextBlock Text="{Binding CartTotal, StringFormat='Total: ${0:F2}'}" 
                                      FontWeight="Bold" FontSize="14" Foreground="Green" Margin="0,0,0,10"/>
                            <TextBlock Text="{Binding CartItemIds.Count, StringFormat='Items: {0}'}" 
                                      FontSize="12" Foreground="Blue" Margin="0,0,0,10"/>
                            <Button Content="Create Order" Command="{Binding CreateOrderFromCartCommand}" 
                                   Width="180" Height="35" Background="Green" Foreground="White" 
                                   Margin="0,0,0,5"/>
                            <Button Content="Clear Cart" Command="{Binding ClearCartCommand}" 
                                   Width="180" Height="30" Background="Orange" Foreground="White" 
                                   Margin="0,0,0,10"/>
                            
                            <ItemsControl ItemsSource="{Binding CartDisplayItems}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Vertical"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="White" 
                                                BorderBrush="LightBlue" 
                                                BorderThickness="1" 
                                                CornerRadius="3" 
                                                Padding="8" 
                                                Margin="0,2">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding ItemName}" FontWeight="Medium"/>
                                                    <TextBlock Text="{Binding ItemId, StringFormat='ID: {0}'}" FontSize="10" Foreground="Gray"/>
                                                </StackPanel>
                                                
                                                <Button Grid.Column="1" 
                                                        Content="×" 
                                                        Width="20" 
                                                        Height="20" 
                                                        Background="Red" 
                                                        Foreground="White" 
                                                        FontWeight="Bold"
                                                        Command="{Binding $parent[Window].DataContext.RemoveFromCartCommand}"
                                                        CommandParameter="{Binding ItemId}"
                                                        VerticalAlignment="Top"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>
                    
                    <!-- Vertical separator -->
                    <Border Grid.Column="3" Width="1" Background="LightGray" Margin="10,20"/>
                    
                    <!-- Orders sidebar -->
                    <ScrollViewer Grid.Column="4" Background="#F5F5F5" Padding="10">
                        <StackPanel>
                            <TextBlock Text="Orders List" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                            <Button Content="Delete All Orders" Command="{Binding DeleteAllOrdersCommand}" Width="180" Height="30" Margin="0,0,0,10" Background="Red" Foreground="White" IsEnabled="{Binding HasOrders}"/>
                            <ItemsControl ItemsSource="{Binding Orders}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Vertical"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="White" 
                                                BorderBrush="LightGray" 
                                                BorderThickness="1" 
                                                CornerRadius="3" 
                                                Padding="8" 
                                                Margin="0,2"
                                                Focusable="False">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <StackPanel Grid.Column="0" Focusable="False">
                                                    <TextBlock Text="{Binding Id, StringFormat='Order #{0}'}" FontWeight="Medium"/>
                                                    <TextBlock Text="{Binding ItemsDisplayText}" FontSize="11" Foreground="Blue" TextWrapping="Wrap"/>
                                                    <TextBlock Text="{Binding TotalPrice, StringFormat='Total: ${0:F2}'}" FontSize="12" Foreground="Green"/>
                                                    <TextBlock Text="DELETED" FontSize="10" Foreground="Red" FontWeight="Bold" 
                                                              IsVisible="{Binding IsTombstone}"/>
                                                </StackPanel>
                                                
                                                <Button Grid.Column="1" 
                                                        Content="×" 
                                                        Width="25" 
                                                        Height="25" 
                                                        Background="Red" 
                                                        Foreground="White" 
                                                        FontWeight="Bold"
                                                        Command="{Binding $parent[Window].DataContext.DeleteOrderCommand}"
                                                        CommandParameter="{Binding Id}"
                                                        IsVisible="{Binding !IsTombstone}"
                                                        VerticalAlignment="Top"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            
        </TabControl>
        
        <!-- Console Edge Toggle -->
        <Border Grid.Column="0" 
                Grid.ColumnSpan="2"
                Background="#007ACC"
                Width="20"
                Height="60"
                CornerRadius="0,10,10,0"
                VerticalAlignment="Center"
                HorizontalAlignment="Left"
                Margin="0"
                IsVisible="{Binding !IsConsoleVisible}"
                Cursor="Hand">
            <Button Background="Transparent"
                    BorderThickness="0"
                    Width="20"
                    Height="60"
                    Command="{Binding ToggleConsoleCommand}"
                    ToolTip.Tip="Show Debug Console"
                    Cursor="Hand">
                <TextBlock Text="⚡" 
                          FontSize="12"
                          Foreground="White"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center">
                    <TextBlock.RenderTransform>
                        <RotateTransform Angle="90"/>
                    </TextBlock.RenderTransform>
                </TextBlock>
            </Button>
        </Border>

        <!-- Toast notifications container -->
        <ItemsControl ItemsSource="{Binding ToastService.Toasts}" 
                      VerticalAlignment="Top" 
                      HorizontalAlignment="Right"
                      Margin="20"
                      Grid.Column="1">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Vertical" Spacing="5"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Background="{Binding BackgroundColor}" 
                            CornerRadius="5" 
                            Padding="15,8" 
                            Margin="0,2"
                            IsVisible="{Binding IsVisible}">
                        <TextBlock Text="{Binding Message}" 
                                   Foreground="White" 
                                   FontWeight="Medium"/>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>

</Window>
