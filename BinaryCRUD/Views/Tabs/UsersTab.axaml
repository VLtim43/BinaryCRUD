<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:BinaryCRUD.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="BinaryCRUD.Views.Tabs.UsersTab"
             x:DataType="vm:MainWindowViewModel">

    <Grid ColumnDefinitions="*,Auto,250">
        <!-- User creation area -->
        <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Top" Orientation="Vertical" Spacing="10" Margin="20">
            <TextBlock Text="Create User" FontWeight="Bold" FontSize="18" Margin="0,0,0,10"/>
            <TextBox Text="{Binding NewUsername}" 
                     Watermark="Enter username..." 
                     Width="300" Height="30"/>
            <TextBox Text="{Binding NewPassword}" 
                     Watermark="Enter password..." 
                     Width="300" Height="30"/>
            <ComboBox SelectedIndex="{Binding NewUserRoleIndex}"
                      Width="300" Height="35">
                <ComboBoxItem Content="User"/>
                <ComboBoxItem Content="Admin"/>
            </ComboBox>
            <Button Content="Create User" Command="{Binding CreateUserCommand}" Width="300" Height="35" Background="Green" Foreground="White"/>
            <TextBlock Text="Actions" FontWeight="Bold" FontSize="14" Margin="0,10,0,5"/>
            <Button Content="Read Users" Command="{Binding ReadUsersCommand}" Width="300" Height="35"/>
            <Button Content="Quit" Command="{Binding QuitCommand}" Width="300" Height="35"/>
        </StackPanel>
        
        <!-- Vertical separator -->
        <Border Grid.Column="1" Width="1" Background="LightGray" Margin="10,20"/>
        
        <!-- Users sidebar -->
        <ScrollViewer Grid.Column="2" Background="#F5F5F5" Padding="10">
            <StackPanel Margin="0,0,0,40">
                <TextBlock Text="Users List" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                <Button Content="Delete File" Command="{Binding DeleteUsersFileCommand}" Width="180" Height="30" Margin="0,0,0,10" Background="Red" Foreground="White" IsEnabled="{Binding HasUsers}" IsVisible="{Binding CanDeleteFiles}"/>
                <ItemsControl ItemsSource="{Binding Users}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" 
                                    BorderBrush="LightGray" 
                                    BorderThickness="1" 
                                    CornerRadius="3" 
                                    Padding="8" 
                                    Margin="0,2"
                                    Focusable="False">
                                <StackPanel Focusable="False">
                                    <TextBlock Text="{Binding Username}" FontWeight="Medium" TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding Role}" FontSize="12" Foreground="Blue"/>
                                    <TextBlock Text="{Binding Id, StringFormat='ID: {0}'}" FontSize="10" Foreground="Gray"/>
                                    <TextBlock Text="DELETED" FontSize="10" Foreground="Red" FontWeight="Bold" 
                                              IsVisible="{Binding IsTombstone}"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </Grid>

</UserControl>