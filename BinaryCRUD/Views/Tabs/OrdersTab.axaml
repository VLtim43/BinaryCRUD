<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:BinaryCRUD.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="BinaryCRUD.Views.Tabs.OrdersTab"
             x:DataType="vm:MainWindowViewModel">

    <Grid ColumnDefinitions="*,Auto,250,Auto,250">
        <!-- Admin orders list in center of screen -->
        <ScrollViewer Grid.Column="0" Margin="20" IsVisible="{Binding IsAdmin}" HorizontalAlignment="Center" VerticalAlignment="Top">
            <StackPanel HorizontalAlignment="Center" MaxWidth="800">
                <TextBlock Text="All Orders" FontWeight="Bold" FontSize="18" Margin="0,0,0,10" HorizontalAlignment="Center"/>
                <Button Content="Delete All Orders" Command="{Binding DeleteAllOrdersCommand}" Width="200" Height="30" Margin="0,0,0,20" Background="Red" Foreground="White" IsEnabled="{Binding HasOrders}" IsVisible="{Binding CanDeleteOrders}" HorizontalAlignment="Center"/>
                <ItemsControl ItemsSource="{Binding Orders}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" 
                                    BorderBrush="LightGray" 
                                    BorderThickness="1" 
                                    CornerRadius="3" 
                                    Padding="8" 
                                    Margin="0,2"
                                    Width="600"
                                    HorizontalAlignment="Center"
                                    Focusable="False">
                                <StackPanel Focusable="False">
                                    <TextBlock Text="{Binding Id, StringFormat='Order #{0}'}" FontWeight="Medium"/>
                                    <TextBlock Text="{Binding UserDisplayText}" FontSize="12" FontWeight="Medium" Margin="0,2,0,0"/>
                                    <TextBlock Text="{Binding AdditionalInfo}" FontSize="10" Foreground="Gray" TextWrapping="Wrap" 
                                              IsVisible="{Binding HasAdditionalInfo}" 
                                              Margin="0,2,0,0"/>
                                    <TextBlock Text="{Binding ItemsDisplayText}" FontSize="11" Foreground="Blue" TextWrapping="Wrap" Margin="0,2,0,0"/>
                                    <TextBlock Text="{Binding TotalPrice, StringFormat='Total: ${0:F2}'}" FontSize="12" Foreground="Green" Margin="0,2,0,0"/>
                                    <TextBlock Text="DELETED" FontSize="10" Foreground="Red" FontWeight="Bold" 
                                              IsVisible="{Binding IsTombstone}"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <Button Content="Quit" Command="{Binding QuitCommand}" Width="150" Height="35" Margin="0,20,0,0" HorizontalAlignment="Center"/>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Order creation area - Only visible to regular users -->
        <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Top" Orientation="Vertical" Spacing="10" Margin="20" IsVisible="{Binding CanCreateOrders}">
            <TextBlock Text="Create Order" FontWeight="Bold" FontSize="18" Margin="0,0,0,10"/>
            <TextBox Text="{Binding OrderAdditionalInfo}" 
                     Watermark="Enter additional info (optional)..." 
                     Width="300" Height="60"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     IsEnabled="{Binding CanCreateOrders}"/>
            <TextBlock Text="Select Items" FontWeight="Bold" FontSize="14" Margin="0,10,0,5"
                       IsVisible="{Binding IsLoggedIn}"/>
            <ComboBox ItemsSource="{Binding ActiveItems}" 
                      SelectedItem="{Binding SelectedItem}"
                      Width="300" Height="35" 
                      PlaceholderText="Select an item to add to cart..."
                      IsEnabled="{Binding CanCreateOrders}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Content}" Margin="0,0,10,0"/>
                            <TextBlock Text="{Binding Price, StringFormat='${0:F2}'}" Foreground="Green"/>
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <Button Content="Add to Cart" Command="{Binding AddToCartCommand}" Width="300" Height="35" Background="Blue" Foreground="White"
                    IsVisible="{Binding CanCreateOrders}"/>
            <Button Content="Read Orders" Command="{Binding ReadOrdersCommand}" Width="300" Height="35"
                    IsVisible="{Binding IsLoggedIn}"/>
            <Button Content="Quit" Command="{Binding QuitCommand}" Width="300" Height="35"/>
        </StackPanel>
        
        <!-- Vertical separator - Only visible when order creation is visible -->
        <Border Grid.Column="1" Width="1" Background="LightGray" Margin="10,20" IsVisible="{Binding CanCreateOrders}"/>
        
        <!-- Shopping Cart - Only visible to regular users -->
        <ScrollViewer Grid.Column="2" Background="#F5F5F5" Padding="10" IsVisible="{Binding CanCreateOrders}">
            <StackPanel Margin="0,0,0,40">
                <TextBlock Text="Shopping Cart" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                <TextBlock Text="{Binding CartTotal, StringFormat='Total: ${0:F2}'}" 
                          FontWeight="Bold" FontSize="14" Foreground="Green" Margin="0,0,0,10"/>
                <TextBlock Text="{Binding CartItemIds.Count, StringFormat='Items: {0}'}" 
                          FontSize="12" Foreground="Blue" Margin="0,0,0,10"/>
                <Button Content="Create Order" Command="{Binding CreateOrderFromCartCommand}" 
                       Width="180" Height="30" Background="Green" Foreground="White" 
                       Margin="0,0,0,5"/>
                <Button Content="Clear Cart" Command="{Binding ClearCartCommand}" 
                       Width="180" Height="30" Background="Orange" Foreground="White" 
                       Margin="0,0,0,10"/>
                
                <ItemsControl ItemsSource="{Binding CartDisplayItems}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" 
                                    BorderBrush="LightBlue" 
                                    BorderThickness="1" 
                                    CornerRadius="3" 
                                    Padding="8" 
                                    Margin="0,2">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding ItemName}" FontWeight="Medium"/>
                                        <TextBlock Text="{Binding ItemId, StringFormat='ID: {0}'}" FontSize="10" Foreground="Gray"/>
                                    </StackPanel>
                                    
                                    <Button Grid.Column="1" 
                                            Content="Ã—" 
                                            Width="20" 
                                            Height="20" 
                                            Background="Red" 
                                            Foreground="White" 
                                            FontWeight="Bold"
                                            Command="{Binding $parent[UserControl].DataContext.RemoveFromCartCommand}"
                                            CommandParameter="{Binding ItemId}"
                                            VerticalAlignment="Top"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Vertical separator - Only visible when orders sidebar is visible -->
        <Border Grid.Column="3" Width="1" Background="LightGray" Margin="10,20" IsVisible="False"/>
        
        <!-- Orders sidebar - Hidden since orders are now shown in center for admins -->
        <ScrollViewer Grid.Column="4" Background="#F5F5F5" Padding="10" IsVisible="False">
            <StackPanel Margin="0,0,0,40">
                <TextBlock Text="Orders List" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                <Button Content="Delete All Orders" Command="{Binding DeleteAllOrdersCommand}" Width="180" Height="30" Margin="0,0,0,10" Background="Red" Foreground="White" IsEnabled="{Binding HasOrders}" IsVisible="{Binding CanDeleteOrders}"/>
                <ItemsControl ItemsSource="{Binding Orders}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" 
                                    BorderBrush="LightGray" 
                                    BorderThickness="1" 
                                    CornerRadius="3" 
                                    Padding="8" 
                                    Margin="0,2"
                                    Focusable="False">
                                <StackPanel Focusable="False">
                                    <TextBlock Text="{Binding Id, StringFormat='Order #{0}'}" FontWeight="Medium"/>
                                    <TextBlock Text="{Binding UserDisplayText}" FontSize="12" FontWeight="Medium" Margin="0,2,0,0"/>
                                    <TextBlock Text="{Binding AdditionalInfo}" FontSize="10" Foreground="Gray" TextWrapping="Wrap" 
                                              IsVisible="{Binding HasAdditionalInfo}" 
                                              Margin="0,2,0,0"/>
                                    <TextBlock Text="{Binding ItemsDisplayText}" FontSize="11" Foreground="Blue" TextWrapping="Wrap" Margin="0,2,0,0"/>
                                    <TextBlock Text="{Binding TotalPrice, StringFormat='Total: ${0:F2}'}" FontSize="12" Foreground="Green" Margin="0,2,0,0"/>
                                    <TextBlock Text="DELETED" FontSize="10" Foreground="Red" FontWeight="Bold" 
                                              IsVisible="{Binding IsTombstone}"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </Grid>

</UserControl>